{
    "settings_popup": {
        "type": "array",
        "margin": "5",
        "content": [
            {
                "type": "group",
                "header": "Item Placement Mode",
                "header_background": "#3e4b57",
                "content":[
                    {
                        "type": "item",
                        "margin": "-5,-1,-5,-5",
                        "item": "item_placement_mode"
                    }
                ]
            }            
        ]
    },    
    "tracker_default": {
        "type": "container",
        "background": "#877373",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "left",
                    "v_alignment": "stretch",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "dock": "top",
                            "header_content": {
                                "type": "button_popup",
                                "style": "settings",
                                "popup_background": "#55212121",
                                "layout": "settings_popup"
                            },
                            "content": {
                                "type": "layout",
                                "key": "shared_item_grid"
                            }
                        },
                        {
                            "type": "group",
                            "header": "Pinned Locations",
                            "content": {
                                "type": "recentpins",
                                "style": "wrap",
                                "h_alignment": "stretch",
                                "v_alignment": "stretch",
                                "orientation": "vertical",
                                "compact": true
                            }
                        }
                    ]
                },
                {
                    "type": "map"
                }
            ]
        }
    },
    "tracker_horizontal": {
        "type": "container",
        "background": "#877373",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "bottom",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "margin": "0,0,3,0",
                            "dock": "left",
                            "content": {
                                "type": "layout",
                                "key": "shared_item_grid"
                            },
                            "header_content": {
                                "type": "button_popup",
                                "style": "settings",
                                "popup_background": "#55212121",
                                "layout": "settings_popup"
                            }
                        },
                        {
                            "type": "group",
                            "header": "Pinned Locations",
                            "content": {
                                "type": "recentpins",
                                "style": "wrap",
                                "h_alignment": "stretch",
                                "v_alignment": "stretch",
                                "orientation": "horizontal",
                                "compact": true
                            }
                        }
                    ]
                },
                {
                    "type": "map"
                }
            ]
        }
    }
}